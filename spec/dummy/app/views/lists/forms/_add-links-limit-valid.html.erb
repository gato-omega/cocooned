<div id='items' class="nested-form">
  <%= form.fields_for :items do |item_form| %>
    <%= render 'lists/item_fields', :form => item_form %>
  <% end %>
</div>

<%= link_to_add_association 'Add item', form, :items,
                            form_name: :form,
                            partial: 'lists/item_fields',
                            data: {
                              limit: 2,
                              association_insertion_node: '.nested-form',
                              association_insertion_method: 'append',
                            } %>
