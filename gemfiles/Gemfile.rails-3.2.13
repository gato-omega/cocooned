source "http://rubygems.org"

group :development, :test do
  gem "rails", "~> 3.2.0"
  gem "sqlite3", "1.3.8"
  gem "json_pure", "< 2"
  gem "rspec-rails", "~> 3.0.0"
  gem "rspec",       "~> 3.0.0"
  gem "simplecov", :require => false
  gem "rack", "< 2"
  gem "mime-types", "< 3"
  gem 'nokogiri'
  gem "generator_spec"

  platforms :rbx do
    gem 'rubysl'
    gem 'rubysl-test-unit'
    gem 'psych'
    gem 'racc'
    gem 'rubinius-developer_tools'
    gem 'rubinius-coverage', '< 2.1'
    gem 'rubysl-coverage', '< 2.1'
  end
end
