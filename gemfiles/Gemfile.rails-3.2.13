source "http://rubygems.org"

group :development, :test do
  gem "rails", "~> 3.2.0"
  gem "sqlite3"
  gem "json_pure"
  gem "rspec-rails", "~> 3.0.0"
  gem "rspec",       "~> 3.0.0"
  gem "simplecov", :require => false
  gem 'nokogiri'
